
.catogory {
		position: relative;
}
.scroll-view_H {
		white-space: nowrap;
		width: 100%;
		height: 50rpx;
		border-bottom: 1rpx solid #ccc;
}
 ::-webkit-scrollbar{
		display: none;
		width: 0;
		height: 0;
}
.scroll-view-item_H {
		display: inline-block;
		width: 200px;
		height: 60rpx;
		line-height: 50rpx;
		text-align: center;
		font-size: 30rpx;
}
.more {
		position: absolute;
		top: 10rpx;
		right: 0;
		background-color: #f5f5f5;
}
.category-item {
	  margin-right: 20px; /* 为每个 category-item 添加右边距，使它们之间有间隔 */
	  white-space: nowrap; /* 防止文字换行 */
	  display: inline-block; /* 让每个 category-item 在同一行显示 */
}


